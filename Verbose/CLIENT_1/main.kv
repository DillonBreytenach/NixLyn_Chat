        size_hint: 2, None
        text: root.user_m[:2]
        font_size: 15
        on_release: print(root.user_m)



    MD_RECT_BUTTON:
        size_hint: 4, None
        text: root.msg_text
        font_size: 15
        text_size: self.size
        background_color: (0.7, 0.6, 1, 1)
        on_release: print(root.msg_text)


    MD_RECT_BUTTON:
